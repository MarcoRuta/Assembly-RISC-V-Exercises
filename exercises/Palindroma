.data
msgin: .asciz "Inserisci una stringa: "
msgoutT: .asciz "Hai inserito una stringa palindroma!"
msgoutF: .asciz "Hai inserito una stringa NON palindroma!"
str: .space 50

.text
.globl main

main:

la a0,msgin
li a7,4
ecall

la a0,str
li a1,50
li a7,8
ecall

la a1,str
jal strlen

la a1,str
jal isPalindroma

li a7,10
ecall

strlen:
li t0,0
li t1,'\n'
li a2,0

len_loop:
add t2,a1,t0

lbu t3,(t2)
beqz t3,exit
beq t3,t1,exit

addi a2,a2,1
addi t0,t0,1
b len_loop

exit:
addi a2,a2,-1
jr ra


isPalindroma: #in a1 riceve come @param l'indirizzo della stringa, in a2 @param la lunghezza della stringa, stampa se è palindroma o meno
li t0,0
mv t1,a2

pal_loop:
bge t0,t1,palindroma

add t2,a1,t0
add t3,a1,t1

lbu t4,(t2)
lbu t5,(t3)

bne t4,t5,not_palindroma

addi t0,t0,1
addi t1,t1,-1
b pal_loop

palindroma:
la a0,msgoutT
li a7,4
ecall

jr ra

not_palindroma:
la a0,msgoutF
li a7,4
ecall

jr ra

